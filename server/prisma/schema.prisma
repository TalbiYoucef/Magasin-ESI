generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
// schema.prisma
model User {
  user_id     Int     @id @default(autoincrement())
  firstname        String 
  lastname String
  email       String @unique
  address String
  phone_num String
  status    Status   @default(ACTIVE)
  password    String
  token       String @unique
  service_id  Int
  Service     Service @relation(fields: [service_id], references: [service_id])
  enum Status {
  active
  inactive
  enabled
  disabled
}
}

model Role {
  role_id  Int     @id @default(autoincrement())
  name     String
}
 
model UserRole {
  user_id    String      @map(name: "id_user")
  role_id    String      @map(name: "id_role")
  createdAt  DateTime    @default(now())
  @@id([id_user, id_role])
   Role            Role    @relation(fields: [role_id], references: [role_id])
   User            User    @relation(fields: [user_id], references: [user_id])
}

model Service {
  service_id  Int     @id @default(autoincrement())
  name        String
}

model Role_Permission {
  id              Int     @id @default(autoincrement())
  role_id         Int
  permission_id   Int
  Role            Role    @relation(fields: [role_id], references: [role_id])
  Permission      Permission @relation(fields: [permission_id], references: [permission_id])
}

model Permission {
  permission_id   Int     @id @default(autoincrement())
  name            String
}

model Product {
  product_id    Int     @id @default(autoincrement())
  name          String
  qt_logique    Int
  qt_physique   Int
  branch_id     Int
  Branch        Branch  @relation(fields: [branch_id], references: [branch_id])
}

model Branch {
  branch_id   Int     @id @default(autoincrement())
  name        String
  chapter_id  Int
  Chapter     Chapter @relation(fields: [chapter_id], references: [chapter_id])
}

model Chapter {
  chapter_id   Int     @id @default(autoincrement())
  name         String
}

model Command {
  command_id  Int     @id @default(autoincrement())
  user_id     Int
  User        User    @relation(fields: [user_id], references: [user_id])
}

model Product_Command {
  id            Int     @id @default(autoincrement())
  command_id    Int
  product_id    Int
  Command       Command @relation(fields: [command_id], references: [command_id])
  Product       Product @relation(fields: [product_id], references: [product_id])
}
